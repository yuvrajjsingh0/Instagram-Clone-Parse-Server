<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_next_social"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gohibo.album.NextSocial"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/soc_toolbar"
        app:title="@string/setup"
        android:title="@string/setup"/>

    <FrameLayout
        android:id="@+id/soc_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="469dp">

    </FrameLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_soc_us"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/next"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@color/white"
        android:background="@android:color/background_dark" />

</LinearLayout>
